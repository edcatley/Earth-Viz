{
    "name": "earth-viz",
    "description": "Earth - Global Weather Visualization",
    "version": "0.1.0",
    "private": false,
    "author": {
        "name": "Edward Catley",
        "email": "edward.catley@catley.com"
    },
    "homepage": "https://github.com/edcatley/earth",
    "repository": {
        "type": "git",
        "url": "https://github.com/edcatley/earth"
    },
    "keywords": [
        "earth",
        "weather",
        "visualization",
        "globe",
        "map",
        "wind",
        "particles"
    ],
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE.md"
    ],
    "scripts": {
        "dev": "vite",
        "test:micro": "vite --config vite.micro-test.config.js",
        "test:products": "vite --config vite.products-test.config.js",
        "build": "vite build",
        "build:test": "vite build --config vite.micro-test.config.js && vite build --config vite.products-test.config.js",
        "preview": "vite preview",
        "build:lib": "tsc --project tsconfig.lib.json",
        "prepare": "npm run build:lib"
    },
    "dependencies": {
        "@geo-maps/earth-coastlines-10km": "^0.6.0",
        "@geo-maps/earth-coastlines-250m": "^0.6.0",
        "@geo-maps/earth-coastlines-2km5": "^0.6.0",
        "@geo-maps/earth-coastlines-5km": "^0.6.0",
        "@geo-maps/earth-lakes-10km": "^0.6.0",
        "@geo-maps/earth-lakes-2km5": "^0.6.0",
        "@geo-maps/earth-rivers-10km": "^0.6.0",
        "@geo-maps/earth-rivers-2km5": "^0.6.0",
        "d3": "^7.9.0",
        "d3-geo-polygon": "^2.0.1",
        "d3-geo-projection": "^4.0.0",
        "events": "^3.3.0",
        "topojson-client": "^3.1.0"
    },
    "devDependencies": {
        "@types/d3": "^7.4.3",
        "@types/node": "^20.11.24",
        "@types/topojson-client": "^3.1.5",
        "typescript": "^5.3.3",
        "vite": "^5.1.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}